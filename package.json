{
  "name": "homespace-bff",
  "version": "1.4.0",
  "description": "homespace bff",
  "main": "index.ts",
  "type": "commonjs",
  "engineStrict": true,
  "engines": {
    "node": ">=16.13.0"
  },
  "scripts": {
    "bun": "bun run iserver.ts",
    "start": "cross-env npm run build && node build/index.js",
    "ci:start": "NODE_ENV=production cross-env node build/index.js",
    "start:dev": "NODE_ENV=development cross-env nodemon -r ts-node/register --inspect index.ts",
    "build": "esbuild index.ts --platform=node --minify=true  --tree-shaking=true --bundle  --outfile=build/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "cross-env npm run lint:eslint && npm run lint:stylelint && npm run lint:ls",
    "lint:fix": "cross-env npm run lint:eslint -- --fix && npm run lint:ls",
    "lint:eslint": "eslint ./src ./utils ./routes ./interfaces ./app ./config ./middleware ./models --ext .ts,.js",
    "lint:ls": "ls-lint",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:update": "jest -u",
    "typecheck": "tsc",
    "ci:lint": "npm run lint:ls && npm run lint:eslint && npm run typecheck",
    "release:patch": "standard-version -- --release-as patch",
    "release:minor": "standard-version -- --release-as minor",
    "release:major": "standard-version -- --release-as major",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./commitizen.config.cjs"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HomespaceMetaverse/homespace-bff.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HomespaceMetaverse/homespace-bff/issues"
  },
  "homepage": "https://github.com/HomespaceMetaverse/homespace-bff#readme",
  "dependencies": {
    "@aptos-labs/aptos-faucet-client": "^0.2.0",
    "@types/socket.io": "^3.0.2",
    "aptos": "^1.20.0",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "bull": "^4.12.4",
    "bun": "^1.1.34",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.1.2",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^7.0.0",
    "mongodb": "^6.10.0",
    "mongoose": "^7.2.2",
    "node-cache": "^5.1.2",
    "node-html-parser": "^6.1.5",
    "node-telegram-bot-api": "^0.65.1",
    "node-vault": "^0.9.22",
    "nodemailer": "^6.9.3",
    "passport": "^0.6.0",
    "passport-discord": "^0.1.4",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@digitalroute/cz-conventional-changelog-for-jira": "^8.0.1",
    "@ls-lint/ls-lint": "^2.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/bull": "^4.10.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/ioredis": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node-telegram-bot-api": "^0.64.6",
    "@types/nodemailer": "^6.4.8",
    "@types/passport": "^1.0.12",
    "@types/passport-discord": "^0.1.6",
    "@types/qs": "^6.9.17",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "axios-retry": "^3.5.0",
    "body-parser": "^1.20.2",
    "chokidar": "^3.5.3",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "esbuild": "^0.17.19",
    "eslint": "^8.41.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "express-validator": "^7.0.1",
    "husky": "^8.0.3",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^13.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^2.8.8",
    "qs": "^6.13.0",
    "sharp": "^0.33.1",
    "standard-version": "^9.5.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "winston": "^3.9.0"
  }
}
